@model ClassViewModel
@{
    ViewData["Title"] = "AddClass";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    SelectList levels = new SelectList(Model.Levels, "Id", "Name");
}


<form asp-action="AddClass" method="post" class="border p-3 col-md-10 col-lg-6 offset-md-1 offset-lg-3 col-sm-12  mt-5 shadow-lg">
    <h2 class="my-3 text-center"><span class="text-danger" style="font-size: 40px;">A</span>dd <span class="text-danger">C</span>lass</h2>
    <input asp-for="Name" class="form-control my-2 text-center justify-content-center" type="text" placeholder="Class name">
    @*<span asp-validation-for="Name" class="text-danger"></span>*@
    <input asp-for="Seat" class="form-control my-2 text-center justify-content-center" type="text" placeholder="Seat">
    <span asp-validation-for="Seat" class="text-danger"></span>
    <select class="form-control my-2" asp-for="levelID_fk" asp-items="levels">
    </select>
    <span asp-validation-for="levelID_fk" class="text-danger"></span>
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (ViewBag.flag)
    {
        <div class="alert alert-primary text-center" role="alert">
            Standard successfully added!
        </div>
    }
    <button id="btnAdd" class="btn btn-primary mx-auto w-100" type="submit">Add</button>
    <input id="btnUpdate" class="btn btn-outline-warning mx-auto w-100" type="button" value="Update" />
    <input type="hidden" id="hdnID" />
    <!-- table to show standards -->
    <table class="table my-4 border overflow-hidden">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="text-center">#</th>
                <th scope="col" class="text-center">Class</th>
                <th scope="col" class="text-center">Seat</th>
                <th scope="col" class="text-center">Level</th>
                <th scope="col" class="text-center">Process</th>
            </tr>
        </thead>
        <tbody class="tbody">
            @* <!-- row for loop -->
            <tr>
            <td class="py-5 lead border text-center" scope="row">1</td>
            <td class="py-5 lead border text-center" scope="row">C</td>
            <td class="py-5 lead border text-center">
            1st std
            <!-- inut show after click edit btn -->
            <!-- <input type="text" class="form-control"> -->
            </td>
            <td class="py-5 lead border text-center" scope="row">59</td>
            <td>
            <button class="btn btn-primary w-100 my-1 m-0" type="submit">Edit</button>
            <button class="btn btn-danger  w-100 my-1 m-0" type="submit">Delete</button>
            </td>
            </tr>*@

        </tbody>
    </table>

</form>
@section Scripts {
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            GetAllClasses()
            $('#btnUpdate').click(function () {
                Update();
            })
        })
        function GetAllClasses() {
            $('#Name').val("");
            $('#btnAdd').show();
            $('#btnUpdate').hide();
            $.ajax({
                url: "/Admin/GetAllClasses",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    var i = 1;
                    $.each(result, function (key, item) {
                        html += '<tr>';
                        html += '<td>' + i++ + '</td>';
                        html += '<td>' + item.name + '</td>';
                        html += '<td>' + item.seat + '</td>';
                        html += '<td>' + item.levelID_fk + '</td>';//level name
                        html += '<td><a href="javascript:void(0);" onclick=GetClassByID(' + item.id + '); return false;' + '<i class="fa fa-edit" style="font-size: x-large;color: #0066ff;"></i></a>&nbsp;&nbsp;&nbsp;' +
                            '<a href="javascript:void(0);" onclick=Delete(' + item.id + '); return false;>' + '<i class="fa fa-trash" style="font-size: x-large;color: #e62e00;"></i></a>&nbsp;' + '</td>'
                        html += '</tr>';
                    });
                    $('.tbody').html(html);
                }
            });
        }
        function GetClassByID(id) {
            $('#btnAdd').hide();
            $('#btnUpdate').show();
            $('#hdnID').val(id);
            $.ajax({
                url: "/Admin/GetClassByID?id=" + id,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    //alert(result);
                    $('#Name').val(result.name);
                    $('#Seat').val(result.seat);
                    $('#levelID_fk').val(result.levelID_fk);
                }
            });
        }
        function Update() {
            $('#btnUpdate').hide();
            $('#btnAdd').show();
            var id = $('#hdnID').val();
            var name = $('#Name').val();
            var seat = $('#Seat').val();
            var levelID_fk = $('#levelID_fk').val();
            $.ajax({
                url: "/Admin/UpdateClass?Name=" + name + "&Id=" + id + "&Seat=" + seat + "&levelID_fk=" + levelID_fk,
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result == "success") {
                        GetAllClasses();
                    }
                    else {
                        alert('Something Error!');
                    }
                }
            });
        }
        function Delete(id) {
            var dlt = confirm("Are you sure.?! ");
            if (dlt) {
                $.ajax({
                    url: "/Admin/DeleteClass?id=" + id,
                    type: "POST",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        GetAllClasses();
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }
        }
    </script>
}

