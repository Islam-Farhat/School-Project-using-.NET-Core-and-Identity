@model LevelViewModel

@{
    ViewData["Title"] = "AddLevel";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form asp-action="AddLevel" method="post" class="shadow-lg border p-3 col-md-10 col-lg-6 offset-md-1 offset-lg-3 col-sm-12  mt-5">

    <h2 class="my-3 text-center"><span class="text-danger" style="font-size: 40px;">A</span>dd <span class="text-danger">L</span>evel</h2>
    <input asp-for="Name" class="form-control my-2 text-center justify-content-center" placeholder="Level Name">
    @*<span asp-validation-for="Name" class="text-danger"></span>*@
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (ViewBag.flag)
    {
        <div class="alert alert-primary text-center" role="alert">
            Standard successfully added!
        </div>
    }
    <button id="btnAdd" class="btn btn-primary mx-auto w-100" type="submit">Add</button>
    <input id="btnUpdate" class="btn btn-outline-warning mx-auto w-100" type="button" value="Update" />
    <input type="hidden" id="hdnID" />
    <!-- table to show standards -->
    <table class="table my-4 border overflow-hidden">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Standard name</th>
                <th scope="col">process</th>
            </tr>
        </thead>
        <tbody class="tbody">
            @*@{
                int i = 0;
            }
            @foreach (Level item in Model.Levels)
            {
                i++;
                <!-- row for loop -->
                <tr>
                    <td class="py-3 lead" style="vertical-align: middle;" scope="row">@i</td>
                    <td class="py-3 lead" style="vertical-align: middle;">
                        @item.Name
                        <!-- inut show after click edit btn -->
                        <!-- <input type="text" class="form-control"> -->
                    </td>
                    <td style="vertical-align: middle;">
                        <button onclick="GetLevelData(@item.Id)" class="btn btn-primary w-49 my-1 m-0" type="submit">Edit</button>
                        <button class="btn btn-danger  w-49 my-1 m-0" type="submit">Delete</button>
                    </td>
                </tr>
            }*@
        </tbody>
    </table>


</form>
@section Scripts {
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            GetAllLevels();
            $('#btnUpdate').click(function () {
                Update();
            })
        })
        function GetAllLevels() {
            $('#Name').val("");
            $('#btnAdd').show();
            $('#btnUpdate').hide();
            $.ajax({
                url: "/Admin/GetAllLevels",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    var i = 1;
                    $.each(result, function (key, item) {
                        html += '<tr>';
                        html += '<td>' + i++ + '</td>';
                        html += '<td>' + item.name + '</td>';
                        html += '<td><a href="javascript:void(0);" onclick=GetLevelByID(' + item.id + '); return false;' + '<i class="fa fa-edit" style="font-size: x-large;color: #0066ff;"></i></a>&nbsp;&nbsp;&nbsp;' +
                            '<a href="javascript:void(0);" onclick=Delete(' + item.id + '); return false;>' + '<i class="fa fa-trash" style="font-size: x-large;color: #e62e00;"></i></a>&nbsp;' + '</td>'
                        html += '</tr>';
                    });
                    $('.tbody').html(html);
                }
            });
        }
        function GetLevelByID(id) {
            $('#btnAdd').hide();
            $('#btnUpdate').show();
            $('#hdnID').val(id);
            $.ajax({
                url: "/Admin/GetLevelByID?id=" + id,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    $('#Name').val(result);
                }
            });
        }
        function Update() {
            $('#btnUpdate').hide();
            $('#btnAdd').show();
            var name = $('#Name').val();
            var id = $('#hdnID').val();
            $.ajax({
                url: "/Admin/UpdateLevel?Name=" + name + "&Id=" + id,
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result == "success") {
                        GetAllLevels();
                    }
                    else {
                        alert('Something Error!');
                    }
                }
            });
        }
        function Delete(id) {
            var dlt = confirm("Are you sure.?! ");
            if (dlt) {
                $.ajax({
                    url: "/Admin/DeleteLevel?id=" + id,
                    type: "POST",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        GetAllLevels();
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }
        }
    </script>
}
