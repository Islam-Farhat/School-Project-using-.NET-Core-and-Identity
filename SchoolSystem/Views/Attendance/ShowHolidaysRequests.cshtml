@model List<Holiday>

@{
    ViewData["Title"] = "ShowHolidays";
}

<h1>ShowHolidays</h1>

<table class="table">
    <h2> Results: @Model.Count()</h2>
    <thead>
        <tr>

            <th scope="col">Id</th>
            <th scope="col">StudentName</th>
            <th scope="col">Reason</th>
            <th scope="col">Days</th>
            <th scope="col">StartDate</th>
            <th scope="col">State</th>
            <th scope="col">action</th>
           
        </tr>
    </thead>
    <tbody>

        @foreach (var holiday in Model)
        {
            @if (holiday.Status == 0)
            {
                <tr>
                <td>@holiday.Id</td>
                <td>@holiday.ApplicationUser.Name</td>
                <td>@holiday.Reason</td>
                <td>@holiday.DaysNum</td>
                <td>@holiday.StartDate</td>
                <td>@holiday.Status</td>
                <td><a class="btn btn-outline-danger" asp-action="HolidayRequestResponse" asp-controller="Attendance" asp-route-id="@holiday.Id" asp-route-status="2" >Accept</a>
                <a class="btn btn-outline-danger" asp-action="HolidayRequestResponse" asp-controller="Attendance" asp-route-id="@holiday.Id" asp-route-status="1" >Reject</a></td>

            </tr>
  }      }
    </tbody>
</table>




