@model SchoolSystem.ViewModels.HolidayViewModel

@{
    ViewData["Title"] = "EditHoliday";
}

<h1>EditHoliday</h1>

<h4>HolidayViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditHoliday">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DaysNum" class="control-label"></label>
                <input asp-for="DaysNum" class="form-control" />
                <span asp-validation-for="DaysNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewHolidays">Back to List</a>
</div>

