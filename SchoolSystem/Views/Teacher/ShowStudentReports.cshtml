@model List<ApplicationUser>

    <table class="table">
        <thead>
            <tr>
                
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">PhoneNumber</th>
                <th scope="col">BirthDate</th>
                <th scope="col">Gender</th>
            @if (User.Identity.IsAuthenticated == true && User.IsInRole("Admin"))
            {
                <th scope="col">action</th>
            }

            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.photoUrl</td>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>@student.PhoneNumber</td>
                    <td>@student.BirthDate</td>
                    <td>@student.Gender</td>
                    <th>
                     @if(User.Identity.IsAuthenticated==true && User.IsInRole("Admin")){
                    <a  class="btn btn-outline-danger" asp-action="EditStudent" asp-controller="Admin" asp-route-id="@student.Id" >Edit</a>
                        <a class="btn btn-outline-danger" asp-action="HolidayRequestResponse" asp-controller="Attendance" asp-route-id="@student.Id" onclick="return confirmDelete();">Delete</a>
                        }
                    </th>
                </tr>
            }
        </tbody>
    </table>
    
    
    <script>
    function confirmDelete() {
    var result = confirm("Are you sure you want to delete");
    if (result) {
        return true;
    } else {
        return false;
    }
}
</script>